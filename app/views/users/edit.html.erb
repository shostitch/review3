<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= form_with model: @user do |f| %>
        <div class="field">
          <%= f.label "name" %><br />
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label "opinion" %><br />
          <%= f.text_area :introduction %>
        </div>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>
