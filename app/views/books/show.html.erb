<div class="container px-5 px-sm-0 mt-5">
  <div class="row">
    <%= render "users/UserBook",user: @user, book: @book %>
    <div class="col-8 md-3 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= link_to @user.name, user_path(@user) %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path(@book) %></td>
            <td><%= link_to "Destroy", book_path(@book),method: :delete,data: {confirm: "消しますか？"} %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
